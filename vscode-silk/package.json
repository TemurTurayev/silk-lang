{
  "name": "silk-lang",
  "displayName": "Silk Language",
  "description": "Language support for Silk â€” syntax highlighting, diagnostics, completions, and hover docs",
  "version": "0.2.0",
  "publisher": "silk-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "silk",
    "medical",
    "programming language",
    "healthcare",
    "clinical computing"
  ],
  "activationEvents": [
    "onLanguage:silk"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "silk",
        "aliases": ["Silk", "silk"],
        "extensions": [".silk"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "silk",
        "scopeName": "source.silk",
        "path": "./syntaxes/silk.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Silk",
      "properties": {
        "silk.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the Silk Language Server (diagnostics, completions, hover)"
        },
        "silk.lsp.serverCommand": {
          "type": "string",
          "default": "",
          "description": "Custom command to start the Silk LSP server. Leave empty to auto-detect."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TemurTurayev/silk-lang"
  },
  "license": "MIT"
}
