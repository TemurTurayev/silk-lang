{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Silk",
  "scopeName": "source.silk",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#medical-functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.silk",
          "match": "//.*$"
        },
        {
          "name": "comment.block.silk",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.silk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.silk",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.silk",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.silk",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.silk",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.silk",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.silk",
          "match": "\\b(if|elif|else|while|for|in|break|continue|return)\\b"
        },
        {
          "name": "keyword.declaration.silk",
          "match": "\\b(let|mut|fn)\\b"
        },
        {
          "name": "keyword.operator.logical.silk",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.silk",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.silk",
          "match": "\\b(null)\\b"
        },
        {
          "name": "keyword.other.import.silk",
          "match": "\\b(import)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.silk",
          "match": "\\b(int|float|str|bool|array)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.silk",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.silk",
          "match": "\\b(print|input|type|str|int|float|bool|len|range|push|pop|slice|reverse|sort|join|split|contains|map|filter)\\b"
        },
        {
          "name": "support.function.math.silk",
          "match": "\\b(abs|round|min|max|sum|sqrt|pow|log|log10|sin|cos|tan|pi|ceil|floor)\\b"
        }
      ]
    },
    "medical-functions": {
      "patterns": [
        {
          "name": "support.function.medical.silk",
          "match": "\\b(bmi|bsa|dose_per_kg|ideal_body_weight|celsius_to_fahrenheit|fahrenheit_to_celsius|mean|median|stdev)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.silk",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.silk",
          "match": "(\\+=|-=|\\*=|/=|=)"
        },
        {
          "name": "keyword.operator.arithmetic.silk",
          "match": "(\\+|-|\\*\\*|\\*|/|%)"
        },
        {
          "name": "keyword.operator.arrow.silk",
          "match": "->"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.silk",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.silk",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters.silk",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.silk",
          "match": "[,:]"
        },
        {
          "name": "punctuation.accessor.silk",
          "match": "\\."
        }
      ]
    }
  }
}
