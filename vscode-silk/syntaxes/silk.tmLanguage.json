{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Silk",
  "scopeName": "source.silk",
  "patterns": [
    { "include": "#comments" },
    { "include": "#fstrings" },
    { "include": "#triple-strings" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constructors" },
    { "include": "#functions" },
    { "include": "#medical-functions" },
    { "include": "#lambdas" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.silk",
          "match": "//.*$"
        },
        {
          "name": "comment.block.silk",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "fstrings": {
      "patterns": [
        {
          "name": "string.interpolated.silk",
          "begin": "f\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "string.quoted.double.silk punctuation.definition.string.begin.silk" }
          },
          "endCaptures": {
            "0": { "name": "string.quoted.double.silk punctuation.definition.string.end.silk" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.silk",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.silk",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.embedded.begin.silk" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.embedded.end.silk" }
              },
              "patterns": [
                { "include": "source.silk" }
              ]
            }
          ]
        },
        {
          "name": "string.interpolated.silk",
          "begin": "f'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "string.quoted.single.silk punctuation.definition.string.begin.silk" }
          },
          "endCaptures": {
            "0": { "name": "string.quoted.single.silk punctuation.definition.string.end.silk" }
          },
          "patterns": [
            {
              "name": "constant.character.escape.silk",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.expression.silk",
              "begin": "\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.section.embedded.begin.silk" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.section.embedded.end.silk" }
              },
              "patterns": [
                { "include": "source.silk" }
              ]
            }
          ]
        }
      ]
    },
    "triple-strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.silk",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.silk",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.silk",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.silk",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.silk",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.silk",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.silk",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.silk",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.silk",
          "match": "\\b(if|elif|else|while|for|in|break|continue|return|do|repeat|loop|guard|unless)\\b"
        },
        {
          "name": "keyword.declaration.silk",
          "match": "\\b(let|mut|fn|const)\\b"
        },
        {
          "name": "keyword.declaration.type.silk",
          "match": "\\b(struct|enum|match|impl|interface)\\b"
        },
        {
          "name": "keyword.control.exception.silk",
          "match": "\\b(try|catch|throw)\\b"
        },
        {
          "name": "keyword.other.testing.silk",
          "match": "\\b(test|assert)\\b"
        },
        {
          "name": "keyword.operator.logical.silk",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.silk",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.silk",
          "match": "\\b(null)\\b"
        },
        {
          "name": "keyword.other.import.silk",
          "match": "\\b(import|as)\\b"
        },
        {
          "name": "variable.language.self.silk",
          "match": "\\b(self)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.silk",
          "match": "\\b(int|float|str|bool|array|map|Option|Result)\\b"
        }
      ]
    },
    "constructors": {
      "patterns": [
        {
          "name": "support.constant.silk",
          "match": "\\b(Some|None|Ok|Err)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.silk",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.silk",
          "match": "\\b(print|input|type|typeof|str|int|float|bool|len|range|push|pop|shift|unshift|slice|reverse|sort|join|split|contains|indexOf|map|filter|find|reduce|forEach|zip|flatten)\\b"
        },
        {
          "name": "support.function.math.silk",
          "match": "\\b(abs|round|min|max|sum|sqrt|pow|log|log10|sin|cos|tan|pi|ceil|floor)\\b"
        }
      ]
    },
    "medical-functions": {
      "patterns": [
        {
          "name": "support.function.medical.silk",
          "match": "\\b(bmi|bsa|dose_per_kg|ideal_body_weight|celsius_to_fahrenheit|fahrenheit_to_celsius|mean|median|stdev)\\b"
        }
      ]
    },
    "lambdas": {
      "patterns": [
        {
          "name": "meta.lambda.silk",
          "match": "\\|([a-zA-Z_][a-zA-Z0-9_]*(\\s*,\\s*[a-zA-Z_][a-zA-Z0-9_]*)*)\\|",
          "captures": {
            "1": { "name": "variable.parameter.silk" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.match-arm.silk",
          "match": "=>"
        },
        {
          "name": "keyword.operator.pipe.silk",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.arrow.silk",
          "match": "->"
        },
        {
          "name": "keyword.operator.optional-chain.silk",
          "match": "\\?\\."
        },
        {
          "name": "keyword.operator.null-coalesce.silk",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.spread.silk",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.range.silk",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.comparison.silk",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.silk",
          "match": "(\\+=|-=|\\*=|/=|%=|=)"
        },
        {
          "name": "keyword.operator.arithmetic.silk",
          "match": "(\\+|-|\\*\\*|\\*|/|%)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.silk",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.silk",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters.silk",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.silk",
          "match": "[,:]"
        },
        {
          "name": "punctuation.accessor.silk",
          "match": "\\."
        }
      ]
    }
  }
}
